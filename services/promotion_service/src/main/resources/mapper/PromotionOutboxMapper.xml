<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.foodapp.promotion_service.persistence.repository.PromotionOutboxRepository">

    <resultMap id="PromotionOutboxMap"
               type="com.foodapp.promotion_service.persistence.entity.PromotionOutboxEntity">
        <id property="id" column="id" jdbcType="OTHER" typeHandler="org.apache.ibatis.type.UUIDTypeHandler"/>
        <result property="aggregateId" column="aggregate_id" jdbcType="OTHER" typeHandler="org.apache.ibatis.type.UUIDTypeHandler"/>
        <result property="aggregateVersion" column="aggregate_version"/>

        <result property="changeMask" column="change_mask" jdbcType="OTHER" typeHandler="com.foodapp.promotion_service.persistence.typehandler.JsonListTypeHandler"/>
        <result property="payload" column="payload" jdbcType="OTHER" typeHandler="com.foodapp.promotion_service.persistence.typehandler.JsonStringTypeHandler"/>
        <result property="publishedAt" column="published_at"/>
    </resultMap>

    <insert id="createOutbox" parameterType="com.foodapp.promotion_service.persistence.entity.PromotionOutboxEntity">
        INSERT INTO promotion_outbox (
            id,
            aggregate_id,
            aggregate_version,
            change_mask,
            payload,
            published_at
        )
        VALUES (
                   #{id}::uuid,
                   #{aggregateId}::uuid,
                   #{aggregateVersion},
                   #{changeMask}::jsonb,
                   #{payload}::jsonb,
                   #{publishedAt}
               )
    </insert>
</mapper>